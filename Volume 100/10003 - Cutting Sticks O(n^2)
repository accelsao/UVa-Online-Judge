#include<string>
#include<cstdio>
#include<iostream>
#include<queue>
#include<cmath>
#include<stack>
#include<cctype>
#include<cstring>
#include<sstream>
#include<set>
#include<map>
#include<algorithm>
#include<functional>
#include <regex>
using namespace std;

int p[51];
int main(){
	int len,n;
	int dp[51][51];
	int s[51][51];
	
	
	while (cin >> len, len){
		cin >> n;
		memset(s, 0, sizeof(s));
		for (int i = 1; i <= n; i++)
			cin >> p[i];
		p[0] = 0; p[++n] = len;
		for (int i = 1; i <= n + 1; i++)
			s[i - 1][i] = i;
		memset(dp, 0, sizeof(dp));
		//切割點1~n 邊界0 n+1
		//最小長度差2 只有一個切點 左0右n+1 ->2 
		for (int d = 2; d <= n; d++)
			for (int i = 0, j = d; j <= n; i++, j++){
				dp[i][j] = 1e9;
				for (int k = s[i][j - 1]; k <= s[i + 1][j]; k++)
					if (dp[i][j] > dp[i][k] + dp[k][j]){
						dp[i][j] = dp[i][k] + dp[k][j];
						s[i][j] = k;
					}
				dp[i][j] += p[j] - p[i];
			}
		printf("The minimum cutting is %d.\n", dp[0][n]);
	}
}
