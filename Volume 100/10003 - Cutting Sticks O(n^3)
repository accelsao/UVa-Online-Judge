#include<string>
#include<cstdio>
#include<iostream>
#include<queue>
#include<cmath>
#include<stack>
#include<cctype>
#include<cstring>
#include<sstream>
#include<set>
#include<map>
#include<algorithm>
#include<functional>
#include <regex>
using namespace std;

int p[51];
int main(){
	int len,n;
	int dp[51][51];
	while (cin >> len, len){
		cin >> n;
		for (int i = 1; i <= n; i++)
			cin >> p[i];
		p[0] = 0; p[++n] = len;
		memset(dp, 0, sizeof(dp));
		//切割點1~n 邊界0 n+1
		//最小長度差2 只有一個切點 左0右n+1 ->2 
		for (int d = 2; d <= n; d++)
			for (int i = 0, j = d; j <= n; j++, i++){
				dp[i][j] = 1e9;
				for (int k = i + 1; k < j; k++)
					dp[i][j] = min(dp[i][j], dp[i][k] + dp[k][j]+p[j]-p[i]);
			}
		printf("The minimum cutting is %d.\n", dp[0][n]);
	}
}
